{
    "name": "Mommy-Please",
    "version": "0.1",
    "manifest_version": 2,
    "description": "A Chromium Extension to ask mommy for a website.",
    "icons": {
        "16": "icons/16.png",
        "32": "icons/32.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },
    "background": {
        "scripts": ["background.js"]
      },
    "browser_action": {
        "default_popup": "popup/popup.html"
    },
    "declarative_net_request" : {
        "rule_resources" : [{
          "id": "ruleset_1",
          "enabled": true,
          "path": "rules.json"
        }]
    },
    "permissions": [
        "declarativeNetRequest",
        "webRequest",
        "declarativeNetRequestFeedback",
        "<all_urls>"
      ]
}